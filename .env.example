# .env.example - Copy this and rename to .env

# ===========================
# Backend Environment Variables
# ===========================

# Server Port
PORT=5000

# MongoDB Connection String
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname
# For local MongoDB: mongodb://localhost:27017/fifa-tournament
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fifa?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Environment
NODE_ENV=development

# ===========================
# Frontend Environment Variables (for build)
# ===========================

# API Base URL (used in frontend during build)
# Development: http://localhost:5000
# Production: https://your-domain.com
REACT_APP_API_URL=http://localhost:5000

# ===========================
# Optional: AWS S3 for Image Upload
# ===========================

# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1
